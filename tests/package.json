{
  "name": "bastion-e2e-tests",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:integration": "jest --testPathPattern=integration",
    "test:cross-chain": "jest --testPathPattern=cross-chain",
    "test:relayer": "jest --testPathPattern=relayer",
    "test:api": "jest --testPathPattern=api",
    "test:performance": "jest --testPathPattern=performance",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk -r ts-node/register node_modules/.bin/jest --runInBand",
    "docker:up": "docker-compose -f docker/docker-compose.test.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.test.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose.test.yml logs -f",
    "setup:test-env": "node scripts/setup-test-environment.js",
    "cleanup:test-env": "node scripts/cleanup-test-environment.js"
  },
  "dependencies": {
    "ethers": "^6.15.0",
    "axios": "^1.11.0",
    "ws": "^8.13.0",
    "socket.io-client": "^4.7.0",
    "redis": "^4.6.0",
    "@prisma/client": "^5.0.0",
    "pg": "^8.16.3",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jest": "^29.0.0",
    "@types/ws": "^8.5.0",
    "@types/pg": "^8.10.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "hardhat": "^2.26.3",
    "supertest": "^6.3.0",
    "dockerode": "^4.0.0",
    "artillery": "^2.0.0",
    "k6": "^0.47.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 300000,
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "tests/**/*.ts",
      "!tests/**/*.d.ts"
    ],
    "globalSetup": "<rootDir>/jest.global-setup.js",
    "globalTeardown": "<rootDir>/jest.global-teardown.js"
  }
}
